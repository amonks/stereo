          "speed": 5,
          "frameCount": 0,
          "r": 100,
          "g": 0,
          "b": 0,
          "br": 100,
          "bg": 100,
          "bb": 100
        },
        "right": {
          "side": "left",
          "mode": "lines",
          "lineWidth": 2,
          "distance": 20,
          "direction": "vertical",
          "fps": 24,
          "speed": -5,
          "frameCount": 0,
          "r": 100,
          "g": 0,
          "b": 0,
          "br": 100,
          "bg": 100,
          "bb": 100
        }
      }
